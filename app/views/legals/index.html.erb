<p id="notice"><%= notice %></p>

<h1>Legals</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legals.each do |legal| %>
      <tr>
        <td><%= legal.subject %></td>
        <td><%= legal.body %></td>
        <td><%= link_to 'Show', client_legal_path(@client, legal) %></td>
        <td><%= link_to 'Edit', edit_client_legal_path(@client, legal) %></td>
        <td><%= link_to 'Destroy', client_legal_path(@client, legal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

